@using Microsoft.AspNetCore.Identity
@using XCourse.Core.Entities
@inject SignInManager<AppUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <!-- Show Logout when user is signed in -->
    
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <i class="fa-solid fa-power-off nav-icon"></i>
            <span class="nav-text">Logout</span>
        </a>
    </li>
}
else
{
    <!-- Show Login and Sign Up when user is not signed in -->
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
            <i class="fa-solid fa-right-to-bracket nav-icon"></i>
            <span class="nav-text">Login</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
            <i class="fa-solid fa-user-plus nav-icon"></i>
            <span class="nav-text">Sign Up</span>
        </a>
    </li>
}