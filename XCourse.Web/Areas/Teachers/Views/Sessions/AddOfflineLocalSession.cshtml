@model XCourse.Core.ViewModels.TeachersViewModels.Sessions.AddOfflineLocalSessionVM

@section Styles {
    <link href="~/css/form.css" rel="stylesheet" />
    <style>
        .dimmed-field {
            background: #f5f5f5 !important;
            color: #888 !important;
            pointer-events: none;
        }
        .form-validation-summary {
            color: #dc3545;
            font-size: 1rem;
            margin-bottom: 1em;
            font-weight: 600;
            border-left: 4px solid #dc3545;
            padding-left: 0.75em;
            margin-top: 1em;
            display: flex;
            align-items: flex-start;
        }
        .form-validation-summary .error-icon {
            margin-right: 0.5em;
            font-size: 1.2em;
            vertical-align: middle;
        }
        .field-error-message {
            display: block;
            color: #dc3545;
            font-size: 0.98rem;
            margin-top: 0.5em;
            margin-bottom: 0.25rem;
            font-weight: 500;
            border-left: 4px solid #dc3545;
            padding-left: 0.5em;
            background: none;
            border-radius: 0;
            padding-top: 0;
            padding-bottom: 0;
        }
        .error-icon {
            color: #dc3545;
            margin-right: 0.5em;
            font-size: 1em;
            vertical-align: middle;
        }
        .address-map-row {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
        }
        .address-fields {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .map-square {
            flex: 1;
            min-width: 250px;
            min-height: 250px;
            max-width: 100%;
            max-height: 350px;
            background: #f5f5f5;
            border-radius: 10px;
            border: 1px solid #ccc;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            justify-content: flex-start;
            overflow: hidden;
            margin-top: 1rem;
        }
        #session-location-map {
            width: 100%;
            height: 100%;
            border-radius: 8px;
            border: none;
            overflow: hidden;
        }
        @@media (max-width: 768px) {
            .address-map-row {
                flex-direction: column;
            }
            .map-square {
                min-width: 100%;
                min-height: 200px;
            }
        }
    </style>
}

<div class="form-container">
    <h1 class="form-header">Add Offline Local Session</h1>
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
    {
        <div class="form-validation-summary">
            <i class="fas fa-exclamation-circle error-icon" aria-hidden="true"></i>
            @Html.ValidationSummary(false, "Please fix the following errors:")
        </div>
    }
    <form asp-action="AddOfflineLocalSession" asp-area="Teachers" asp-controller="Sessions" method="post" enctype="multipart/form-data">
        <input asp-for="GroupID" type="hidden" />
        <div class="address-map-row">
            <div class="address-fields">
                <div class="form-group">
                    <label asp-for="Address.Street"></label>
                    <input asp-for="Address.Street" class="form-control" />
                    <span asp-validation-for="Address.Street" class="field-error-message"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Neighborhood"></label>
                    <input asp-for="Address.Neighborhood" class="form-control" />
                    <span asp-validation-for="Address.Neighborhood" class="field-error-message"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City"></label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="field-error-message"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Governorate"></label>
                    <input asp-for="Address.Governorate" class="form-control" />
                    <span asp-validation-for="Address.Governorate" class="field-error-message"></span>
                </div>
            </div>
            <div class="map-square" style="flex-direction:column; align-items:stretch;">
                <input readonly hidden asp-for="Latitude" type="hidden" id="Latitude" />
                <input readonly hidden asp-for="Longitude" type="hidden" id="Longitude" />
                <input readonly hidden id="LocationDisplay" class="form-control dimmed-field" readonly value="@((Model.Location != null ? ($"{Model.Location.X}, {Model.Location.Y}") : (Model.Latitude.HasValue && Model.Longitude.HasValue ? $"{Model.Latitude},{Model.Longitude}" : "")))" style="margin-bottom:0.5em;" />
                <span asp-validation-for="Latitude" class="field-error-message"></span>
                <span asp-validation-for="Longitude" class="field-error-message"></span>
                <div id="session-location-map"></div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-6 col-md-12">
                <label asp-for="Date"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="field-error-message"></span>
            </div>
            <div class="col-lg-6 col-md-12">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="field-error-message"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-6 col-md-12">
                <label asp-for="StartTime"></label>
                <input asp-for="StartTime" type="time" class="form-control" />
                <span asp-validation-for="StartTime" class="field-error-message"></span>
            </div>
            <div class="col-lg-6 col-md-12">
                <label asp-for="EndTime"></label>
                <input asp-for="EndTime" type="time" class="form-control" />
                <span asp-validation-for="EndTime" class="field-error-message"></span>
            </div>
        </div>
        <div class="form-navigation">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-check icon"></i>
                Submit
            </button>
        </div>
    </form>
</div>
@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <script>
        $(document).ready(function () {
            var locVal = $('#Location').val();
            var defaultLat = 10.0, defaultLng = 20.0;
            if (locVal && locVal.includes(',')) {
                var parts = locVal.split(',');
                if (parts.length === 2) {
                    var lat = parseFloat(parts[0]);
                    var lng = parseFloat(parts[1]);
                    if (!isNaN(lat) && !isNaN(lng)) {
                        defaultLat = lat;
                        defaultLng = lng;
                    }
                }
            }
            var map = L.map('session-location-map').setView([defaultLat, defaultLng], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 18,
            }).addTo(map);
            var marker = L.marker([defaultLat, defaultLng], {draggable:true}).addTo(map);
            function updateLocationInputs(lat, lng) {
                $('#Latitude').val(lat);
                $('#Longitude').val(lng);
                $('#LocationDisplay').val(lat + ', ' + lng);
                $('#Latitude').trigger('change');
                $('#Longitude').trigger('change');
            }
            map.on('click', function (e) {
                var lat = e.latlng.lat.toFixed(6);
                var lng = e.latlng.lng.toFixed(6);
                marker.setLatLng([lat, lng]);
                updateLocationInputs(lat, lng);
            });
            marker.on('dragend', function (e) {
                var latlng = marker.getLatLng();
                updateLocationInputs(latlng.lat.toFixed(6), latlng.lng.toFixed(6));
            });
        
            $('form').on('input change', 'input, select, textarea', function () {
                var fieldName = $(this).attr('name');
                if (fieldName) {
                    var $errorSpan = $(this).siblings('span[data-valmsg-for="' + fieldName + '"]');
                    $errorSpan.text("").removeClass('field-validation-error').addClass('field-validation-valid').hide();
                    $(this).removeClass('is-invalid');
                }
            });
            function updateErrorMessages() {
                $('span.field-error-message').each(function () {
                    var $span = $(this);
                    var msg = $span.text().trim();
                    if (msg.length > 0) {
                        if ($span.find('.error-icon').length === 0) {
                            $span.prepend('<i class="fas fa-exclamation-circle error-icon" aria-hidden="true"></i> ');
                        }
                        $span.show();
                    } else {
                        $span.find('.error-icon').remove();
                        $span.hide();
                    }
                });
            }
            updateErrorMessages();
            $(document).on('DOMSubtreeModified', 'span.field-error-message', function () {
                updateErrorMessages();
            });
        });
    </script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
}
