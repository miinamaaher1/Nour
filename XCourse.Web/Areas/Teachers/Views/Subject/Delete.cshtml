@model XCourse.Core.Entities.Subject

@{
    ViewData["Title"] = "Delete";
}
@section Styles {
	<link rel="stylesheet" href="~/css/Teachers/Card.css" />
}

<div class="container">
    <div class="card">
        <div class="card__header">
            Are you sure you want to delete this subject?
        </div>
        <div class="card__row">
            <div class="card__label">Topic:</div>
            <div class="card__value">@Model.Topic</div>
        </div>
        <div class="card__row">
            <div class="card__label">Major:</div>
            <div class="card__value">@Model.Major</div>
        </div>
        <div class="card__row">
            <div class="card__label">Year:</div>
            <div class="card__value">@Model.Year</div>
        </div>
        <div class="card__row">
            <div class="card__label">Semester:</div>
            <div class="card__value">@Model.Semester</div>
        </div>
        <div class="card__actions" style="justify-content: center;">

            <a asp-action="DeleteConfirmed" asp-route-id="@Model.ID"
                class="btn btn--delete"
                style="display: inline-block; text-decoration: none;">
                <i class="fas fa-trash-alt"></i>
                Yes, delete!
            </a>

            <a asp-action="Index"
                class="btn btn--accept"
                style="display: inline-block; text-decoration: none;">
                <i class="fas fa-arrow-left"></i>
                Go Back
            </a>

        </div>
    </div>
</div>
