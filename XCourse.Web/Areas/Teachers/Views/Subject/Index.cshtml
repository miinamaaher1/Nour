@model IEnumerable<XCourse.Core.Entities.Subject>
@section Styles {
  <link rel="stylesheet" href="~/css/Teachers/SubjectsPage.css" />
}
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <!-- Table ****  -->
