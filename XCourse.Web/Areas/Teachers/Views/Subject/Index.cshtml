@model IEnumerable<XCourse.Core.Entities.Subject>
@section Styles {
	<link rel="stylesheet" href="~/css/Teachers/SubjectsPage.css" />
}
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <!-- Table ****  -->
    @* <h2>Subjects</h2> *@

    
    @*     <a asp-action="Create" *@
    @*        class="data-table__btn data-table__btn--add" *@
    @*        style="display: inline-block; text-decoration: none;"> *@
    @*         <i class="fas fa-plus me-1"></i> *@
    @*         Add Subject *@
    @*     </a> *@

     <div class="container">
        <div class="header-section">
            <h2>Subjects</h2>
            <a asp-action="Create" class="data-table__btn data-table__btn--add"
               style="display: inline-block; text-decoration: none;">
                
                <i class="fas fa-plus"></i> Add Subject
            </a>
     </div>

    <div class="data-table">
        <div class="data-table__container">
            <table class="data-table__table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Topic)</th>
                        <th>@Html.DisplayNameFor(model => model.Major)</th>
                        <th>@Html.DisplayNameFor(model => model.Year)</th>
                        <th>@Html.DisplayNameFor(model => model.Semester)</th>
                        @* <th> *@
                        @*     @Html.DisplayNameFor(model => model.IsDeleted) *@
                        @* </th> *@
                        <th colspan="3"
                            style="text-align: center !important">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td>You didn't add any subjects. </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                @* <td>Status : @request.Status</td> *@
                                @* Commented the above one because we know that we are in the pending requests page  *@
                                <td>@Html.DisplayFor(modelItem => item.Topic)</td>
                                @* <td>---Group Description: @request.GroupDescription</td> *@
                                @* Commented this one too because it is more appropriate to mention it in the details, and not here *@
                                <td>@Html.DisplayFor(modelItem => item.Major)</td>
                                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                                <td>@Html.DisplayFor(modelItem => item.Semester)</td>
                                @* <td class="data-table__actions"> *@
                                @*     <a asp-action="Accept" asp-route-id="@request.InvitationID" *@
                                @*        class="data-table__btn data-table__btn--accept" *@
                                @*        style="display: inline-block; text-decoration: none;"> *@
                                @*         <i class="fas fa-check me-1"></i> *@
                                @*         Accept *@
                                @*     </a> *@
                                @* </td> *@


                                @* <td class="data-table__actions"> *@
                                @*     <a asp-action="Details" asp-route-id="@item.ID" *@
                                @*        class="data-table__btn data-table__btn--details" *@
                                @*        style="display: inline-block; text-decoration: none;"> *@
                                @*         <i class="fas fa-eye me-1"></i> *@
                                @*         Details *@
                                @*     </a> *@
                                @* </td> *@
                                <td class="data-table__actions">
                                    <a asp-action="Delete" asp-route-id="@item.ID"
                                       class="data-table__btn data-table__btn--delete"
                                       style="display: inline-block; text-decoration: none;">
                                        <i class="fas fa-trash-alt me-1"></i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>
