@model List<XCourse.Core.ViewModels.StudentsViewModels.StudentGroup>

<div class="container mt-4">
    <h2 class="text-center mb-4"> Groups</h2>
    <div class="row">
        @foreach (var group in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg rounded">
                
                    @if (group.CoverPicture != null && group.CoverPicture.Length > 0)
                    {
                        <div class="position-relative overflow-hidden" style="height: 180px;">
                            <img src="@(group.CoverPicture != null ? "data:image/*;base64," + Convert.ToBase64String(group.CoverPicture) : Url.Content("/images/default_cover.png"))"
                                 class="w-100 h-100 object-fit-cover" >
                        </div>
                    }
                    else
                    {
                        <img src="/images/default_cover.png" class="card-img-top" alt="Defualt">
                    }

                    <div class="card-body">
                        <h5 class="card-title text-primary">@group.Subject</h5>
                        <p class="card-text"><strong>Teacher:</strong> @group.TeacherName</p>

                        <p class="card-text">
                            <strong> Session:</strong> @group.DefaultSessionDays
                        </p>
                        <p class="card-text">
                            <strong>Session is:</strong> @(group.IsOnline ? "Online" : "Onsit")
                        </p>

                        <a asp-route-id="@group.GroupId" asp-area="Students" asp-controller="Group" asp-action="Details" class="btn btn-primary">Details</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
