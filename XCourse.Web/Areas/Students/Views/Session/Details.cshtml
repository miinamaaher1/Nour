@model XCourse.Core.ViewModels.StudentsViewModels.SessionDetailsViewModel
@{
    ViewData["Title"] = "Session Details";
    bool sessionPassed = DateTime.Now > Model.Session.EndDateTime;
    bool hasAttended = Model.Attendances != null && Model.Attendances.HasAttended.HasValue && Model.Attendances.HasAttended.Value;
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1><i class="fas fa-calendar-alt"></i> Session Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/Sessions">Sessions</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-info-circle"></i> Session Information</h4>
        </div>
        <div class="card-body">
            <div class="row d-flex align-items-center justify-content-center">
                        <div class="card-header position-relative text-center p-5" style="
                                 width:70%; height: 300px;  /* Adjust height as needed */
                                 background: url('@(Model.Session.Group.CoverPicture != null ? "data:image/*;base64," + Convert.ToBase64String(Model.Session.Group.CoverPicture) : Url.Content("~/images/default_Group.jpg"))')
                                 center/cover no-repeat;">
                        </div>
                        <div class="text-center position-relative" style="margin-top: -60px;">
                            <img src="@(Model.Session.Group.Teacher.AppUser.ProfilePicture != null ? "data:image/*;base64," + Convert.ToBase64String(Model.Session.Group.Teacher.AppUser.ProfilePicture) : Url.Content("~/images/default_profile.png"))"
                                 class="rounded-circle border border-3 border-primary shadow"
                                 style="width: 120px; height: 120px; object-fit: cover;" alt="Teacher Profile">
                            <h5 class="mt-2 text-primary fw-bold">@Model.Session.Group.Teacher.AppUser.FirstName @Model.Session.Group.Teacher.AppUser.LastName</h5>
                            <p class="text-muted">@Model.Session.Group.Teacher.AppUser.Email</p>
                        </div>
                        <hr />
                <div class="col-md-6">

                    <div class="mb-3">


                        <label class="form-label fw-bold"><i class="fas fa-clock"></i> Date and Time:</label>
                        <div class="d-flex">
                            <div class="badge bg-info me-2">
                                Start: @Model.Session.StartDateTime.ToString("MMM dd, yyyy - h:mm tt")
                            </div>
                            <div class="badge bg-warning">
                                End: @Model.Session.EndDateTime.ToString("MMM dd, yyyy - h:mm tt")
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-hourglass-half"></i> Duration:</label>
                        <p>@(Model.Session.Duration.HasValue ? $"{Model.Session.Duration.Value.Hours}h {Model.Session.Duration.Value.Minutes}m" : "Not specified")</p>
                    </div>

                </div>

                <div class="col-md-6">
                    @if (Model.Session.IsOnline)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-video"></i> Online Session:</label>
                            <p>
                                @if (!string.IsNullOrEmpty(Model.Session.URL))
                                {
                                    <a href="@Model.Session.URL" target="_blank" class="btn btn-sm btn-success">
                                        <i class="fas fa-external-link-alt"></i> Join Meeting
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">URL not provided</span>
                                }
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-map-marker-alt"></i> Location:</label>
                            @if (Model.Session.Address != null)
                            {
                                <p>@Model.Session.Location</p>
                                <p>@Model.Session.Address.Neighborhood - @Model.Session.Address.City - @Model.Session.Address.Governorate  </p>
                            }
                            else
                            {
                                <p class="text-muted">No address provided</p>
                            }
                        </div>
                    }

                    @if (Model.Session.RoomReservation != null && Model.Session.RoomReservation.Room != null)
                    {
                        <div class="alert alert-info">
                            <h5><i class="fas fa-door-open"></i> Room Details</h5>
                            <p><strong>Name:</strong> @Model.Session.RoomReservation.Room.Name</p>
                            <p><strong>Capacity:</strong> @Model.Session.RoomReservation.Room.Capacity people</p>
                            <p><strong>Equipment:</strong> @Model.Session.RoomReservation.Room.Equipment</p>
                            
                            @if (Model.Session.RoomReservation.Room.PreviewPicture != null)
                            {
                                <button type="button" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-image"></i> View Room
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (sessionPassed)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="fas fa-clipboard-check"></i> Attendance & Feedback</h4>
            </div>
            <div class="card-body">
                @if (Model.Attendances.HasAttended.HasValue)
                {
                    <div class="alert alert-@(hasAttended ? "success" : "danger")">
                        <i class="fas fa-@(hasAttended ? "check-circle" : "times-circle")"></i>
                        You are marked as <strong>@(hasAttended ? "Present" : "Absent")</strong> for this session.
                    </div>

                    @if (hasAttended)
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="card border-info">
                                    <div class="card-header bg-info text-white">
                                        <i class="fas fa-star"></i> Grades
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-6">
                                                <h5>Classwork Grade</h5>
                                                @if (Model.Attendances.ClassWorkGrade.HasValue)
                                                {
                                                    <div class="progress" style="height: 25px;">
                                                        <div class="progress-bar bg-primary" role="progressbar" 
                                                             style="width: @(Model.Attendances.ClassWorkGrade.Value)%;" 
                                                             aria-valuenow="@Model.Attendances.ClassWorkGrade.Value" 
                                                             aria-valuemin="0" aria-valuemax="100">
                                                            @Model.Attendances.ClassWorkGrade.Value%
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">Not graded yet</p>
                                                }
                                            </div>
                                            <div class="col-6">
                                                <h5>Homework Grade</h5>
                                                @if (Model.Attendances.HomeWorkGrade.HasValue)
                                                {
                                                    <div class="progress" style="height: 25px;">
                                                        <div class="progress-bar bg-success" role="progressbar" 
                                                             style="width: @(Model.Attendances.HomeWorkGrade.Value)%;" 
                                                             aria-valuenow="@Model.Attendances.HomeWorkGrade.Value" 
                                                             aria-valuemin="0" aria-valuemax="100">
                                                            @Model.Attendances.HomeWorkGrade.Value%
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">Not graded yet</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                @if (!Model.Attendances.Rating.HasValue || string.IsNullOrEmpty(Model.Attendances.Feedback))
                                {
                                    <div class="card border-primary">
                                        <div class="card-header bg-primary text-white">
                                            <i class="fas fa-comment-dots"></i> Your Feedback
                                        </div>
                                        <div class="card-body">
                                            <form asp-action="SaveFeedback" asp-route-sessionId="@Model.Session.ID" method="post">
                                                <input type="hidden" asp-for="Attendances.StudentID" />
                                                <input type="hidden" asp-for="Attendances.SessionID" />
                                                
                                                <div class="mb-3">
                                                    <label asp-for="Attendances.Rating" class="form-label">Rating</label>
                                                    <div class="rating-input">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <div class="form-check form-check-inline">
                                                                <input class="form-check-input" type="radio" asp-for="Attendances.Rating"
                                                                       id="rating@(i)" value="@i"
                                                                       checked="@(Model.Attendances.Rating == i)" />
                                                                <label class="form-check-label" for="rating@(i)">
                                                                    <i class="fas fa-star text-warning"></i> @i
                                                                </label>
                                                            </div>
                                                        }
                                                    </div>
                                                    <span asp-validation-for="Attendances.Rating" class="text-danger"></span>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <label asp-for="Attendances.Feedback" class="form-label">Feedback</label>
                                                    <textarea asp-for="Attendances.Feedback" class="form-control" rows="4" 
                                                              placeholder="Share your thoughts about this session..."></textarea>
                                                    <span asp-validation-for="Attendances.Feedback" class="text-danger"></span>
                                                    <div class="form-text">
                                                        Maximum 500 characters.
                                                        <span id="charCount">0</span>/500
                                                    </div>
                                                </div>
                                                
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fas fa-paper-plane"></i> Submit Feedback
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="card border-success">
                                        <div class="card-header bg-success text-white">
                                            <i class="fas fa-comment-dots"></i> Your Feedback
                                        </div>
                                        <div class="card-body">
                                            <h5>Rating:</h5>
                                            <div class="mb-3">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Model.Attendances.Rating)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-warning"></i>
                                                    }
                                                }
                                            </div>
                                            
                                            <h5>Feedback:</h5>
                                            <p class="border p-3 rounded bg-light">@Model.Attendances.Feedback</p>
                                            
                                            <a href="#" class="btn btn-outline-primary btn-sm edit-feedback" 
                                               data-bs-toggle="modal" data-bs-target="#editFeedbackModal">
                                                <i class="fas fa-edit"></i> Edit Feedback
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        Your attendance for this session hasn't been recorded yet.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-calendar-day"></i>
            This session has not occurred yet. Feedback and attendance will be available after the session ends.
            <div class="mt-3">
                <strong>Countdown:</strong>
                <div id="sessionCountdown" class="fw-bold text-primary fs-5"></div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Room Preview Modal -->
@if (Model.Session.RoomReservation?.Room?.PreviewPicture != null)
{
    <div class="modal fade" id="roomModal" tabindex="-1" aria-labelledby="roomModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="roomModalLabel">
                        <i class="fas fa-door-open"></i> @Model.Session.RoomReservation.Room.Name
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    @{
                        var base64 = Convert.ToBase64String(Model.Session.RoomReservation.Room.PreviewPicture);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                    }
                    <img src="@imgSrc" class="img-fluid rounded" alt="Room preview" />
                    
                    <div class="room-details mt-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <p><i class="fas fa-users"></i> <strong>Capacity:</strong> @Model.Session.RoomReservation.Room.Capacity</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p><i class="fas fa-tools"></i> <strong>Equipment:</strong> @Model.Session.RoomReservation.Room.Equipment</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p><i class="fas fa-dollar-sign"></i> <strong>Price/Hour:</strong> $@Model.Session.RoomReservation.Room.PricePerHour</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Edit Feedback Modal -->
@if (sessionPassed && hasAttended && Model.Attendances.Rating.HasValue && !string.IsNullOrEmpty(Model.Attendances.Feedback))
{
    <div class="modal fade" id="editFeedbackModal" tabindex="-1" aria-labelledby="editFeedbackModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editFeedbackModalLabel">
                        <i class="fas fa-edit"></i> Edit Your Feedback
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="UpdateFeedback" asp-route-sessionId="@Model.Session.ID" method="post">
                        <input type="hidden" asp-for="Attendances.StudentID" />
                        <input type="hidden" asp-for="Attendances.SessionID" />
                        
                        <div class="mb-3">
                            <label for="editRating" class="form-label">Rating</label>
                            <div class="edit-rating-input">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Attendances.Rating" 
                                               id="editRating@(i)" value="@i" 
                                               @(Model.Attendances.Rating == i ? "checked" : "") />
                                        <label class="form-check-label" for="editRating@(i)">
                                            <i class="fas fa-star text-warning"></i> @i
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="editFeedback" class="form-label">Feedback</label>
                            <textarea class="form-control" id="editFeedback" name="Attendances.Feedback" 
                                      rows="4" maxlength="500">@Model.Attendances.Feedback</textarea>
                            <div class="form-text">
                                Maximum 500 characters.
                                <span id="editCharCount">@(Model.Attendances.Feedback?.Length ?? 0)</span>/500
                            </div>
                        </div>
                        
                        <div class="text-end">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Character counter for feedback
        $(document).ready(function() {
            // For main feedback form
            $('textarea[name="Attendances.Feedback"]').on('input', function() {
                var charCount = $(this).val().length;
                $('#charCount').text(charCount);
                
                if (charCount > 500) {
                    $('#charCount').addClass('text-danger');
                } else {
                    $('#charCount').removeClass('text-danger');
                }
            });
            
            // For edit feedback modal
            $('#editFeedback').on('input', function() {
                var charCount = $(this).val().length;
                $('#editCharCount').text(charCount);
                
                if (charCount > 500) {
                    $('#editCharCount').addClass('text-danger');
                } else {
                    $('#editCharCount').removeClass('text-danger');
                }
            });
            
            // Initialize character count on page load
            var initialCount = $('textarea[name="Attendances.Feedback"]').val().length;
            $('#charCount').text(initialCount);
        });
        
        // Countdown timer for upcoming sessions
        @if (!sessionPassed)
        {
            <text>
            function updateCountdown() {
                const sessionDate = new Date('@Model.Session.StartDateTime.ToString("yyyy-MM-ddTHH:mm:ss")');
                const now = new Date();
                const diff = sessionDate - now;
                
                if (diff == 0) {
                    $('#sessionCountdown').text('Session has started!');
                    return;
                }
                
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                
                $('#sessionCountdown').html(
                    `<i class="fas fa-clock"></i> ${days} days, ${hours} hours, ${minutes} minutes, ${seconds} seconds`
                );
            }
            
            // Update countdown every second
            updateCountdown();
            setInterval(updateCountdown, 1000);
            </text>
        }
    </script>
}