@model XCourse.Core.ViewModels.CenterAdminViewModels.DetailsReservationViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/Assistants/Card.css" />
    <link rel="stylesheet" href="~/css/form.css" />




}



<div class="container">
    <div class="teacher-card">
        <div class="teacher-card__header">
            Are you sure you want to delete this?

        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__label">Reservation Room Name:</div>
            <div class="teacher-card__value">@Model.Name</div>
        </div>
        <div class="teacher-card__row">
            @if (Model.Type == "student")
            {
                <div class="teacher-card__label">Student Name:</div>
                <div class="teacher-card__value">@Model.TeacherName</div>
            }
            else
            {
            <div class="teacher-card__label"> Teacher Name:</div>

            <div class="teacher-card__value">@Model.TeacherName</div>
            }
        </div>
        <div class="teacher-card__row">
            @if (Model.Type == "student"){
                <div class="teacher-card__label">Purpose</div>
                <div class="teacher-card__value">@Model.SubjectName</div>
            }
            else{
            <div class="teacher-card__label">Subject Name:</div>
            <div class="teacher-card__value">@Model.SubjectName</div>
            }
        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__label">Reservation Date :</div>
            <div class="teacher-card__value">@Model.Date</div>
        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__label"> TotalPrice:</div>
            <div class="teacher-card__value">
                <span class="money-icon">💰</span> @Model.TotalPrice EGP
            </div>
        </div>

    </div>
 </div>


<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="RoomID" />
   
    <input type="hidden" asp-for="TeacherName" />

   
    <input type="hidden" asp-for="SubjectName" />
    <input type="hidden" asp-for="TotalPrice" />
    <div class="form-navigation">
        <a asp-action="Index"  asp-route-id="@Model.RoomID" class="btn btn-close">Cancel</a>
        <button type="submit" class="btn btn-close">Delete</button>
    </div>
</form>

   
   
