@model IEnumerable<XCourse.Core.ViewModels.CenterAdminViewModels.ReservationViewModel>


<div class="container position-relative">
    <button class="btn btn-outline-secondary position-absolute top-0 end-0 m-3" data-bs-toggle="modal" data-bs-target="#pendingModal">
        <i class="fa fa-cog"></i>
    </button>
    <div class="modal fade" id="pendingModal" tabindex="-1" aria-labelledby="pendingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="pendingModalLabel">Pending Reservations</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
                </div>

                <div class="modal-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                             
                                <th>
                                    Room Name
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StartTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.WeekDay)
                                </th>
                                <th>Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(r => r.ReservationStatus == ReservationStatus.Pending))
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Date)</td>

                                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.WeekDay)</td>
                                    <td>@Html.ActionLink("Accept", "AcceptReservation", new { id = item.ID }, new { @class = "btn btn-outline-success" })</td>
                                    <td>@Html.ActionLink("Reject", "RejectReservation", new { id = item.ID }, new { @class = "btn btn-outline-success" })</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>





<h2>Current Reservations</h2>
<br />
<br />

<table class="table table-striped">
    <thead>
        <tr>
          
            <th>
             @Html.Label("Room Name")
            </th>
             
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(r => r.ReservationStatus == ReservationStatus.Approved))
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
 
               
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WeekDay)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.ActionLink("EditReservation", "EditReservation", new { id = item.ID }, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("DetailsReservation", "DetailsReservation", new { id = item.ID }, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("DeleteReservation", "DeleteReservation", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                </td>
            </tr>
        }
    </tbody>
</table>


