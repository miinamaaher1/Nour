@model XCourse.Core.ViewModels.CenterAdminViewModels.EditRoomReservation

@{
    ViewData["Title"] = "Edit Reservations";
}

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
}


<div class="col-12">
    <section id="form-section" class="form-section col-12 ">
        <div class="form-container">
            <h1 class="form-header">@ViewData["Title"]</h1>
            <form asp-action="Edit">
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                   <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                </div>
                <div class="form-group" style="text-align: center">
                    @if (Model.PreviewPicture != null)
                    {
                        <img id="PreviewPicture" alt="profile" style="border-radius: 10px; width: 100%; height: 250px; object-fit: cover;"
                             src="data:image/*;base64,@(Convert.ToBase64String(Model.PreviewPicture))" />
                    }
                    else
                    {
                        <img id="PreviewPicture" alt="profile" style="border-radius: 10px; width: 100%; height: 250px; object-fit: cover;"
                             src="~/images/default_room.svg" />
                    }
                   
                </div>
                <div class="form-group">
                    <label class="control-label">Current Room</label>
                    <input type="text" class="form-control" asp-for="@Model.RoomName" readonly />

                </div>

                <div class="form-group">
                    <label asp-for="RoomID" class="control-label">Available Rooms</label>
                    <select asp-for="RoomID" asp-items="@(new SelectList(Model.Rooms, "RoomID", "RoomName"))"
                            class="form-control"></select>
                </div>
                <div class="form-navigation">
                    <a asp-action="Index" asp-route-id="@Model.RoomID" class="btn btn-close">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
               

            </form>
        </div>
    </section>
 </div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
