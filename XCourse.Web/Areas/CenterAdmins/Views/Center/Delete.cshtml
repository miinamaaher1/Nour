@model XCourse.Core.ViewModels.CenterAdminViewModels.CreateCenterViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Assistants/Card.css" />
    <link rel="stylesheet" href="~/css/form.css" />
    <style>
        .center-image {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
        }
    </style>
   


}
<div class="container">
    <div class="teacher-card">
        <div class="teacher-card__header">
            Are you sure you want to delete this center?
        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__value">
                <i class="fas fa-building"></i>&nbsp;
                <span>@Model.Name</span>
            </div>
        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__value">
                <i class="fas fa-map-marker-alt"></i>&nbsp;
                <span>@Model.Address.Street St. @Model.Address.City City, @Model.Address.Governorate</span>
            </div>
        </div>

        <form asp-action="Delete">

            <input type="hidden" asp-for="CenterID" />
            <input type="hidden" asp-for="CenterAdminid" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Address" />

            <div class="form-navigation" style="padding: 20px; padding-top:0;">
                <a asp-action="Edit" asp-route-id="@Model.CenterID" class="btn btn-close">Cancel</a>
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>

        </form>

    </div>
</div>



       
      
 

    

    