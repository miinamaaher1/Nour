@model XCourse.Core.ViewModels.CenterAdminViewModels.CreateCenterViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/Assistants/Card.css" />
    <link rel="stylesheet" href="~/css/form.css" />
    <style>
        .center-image {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
            
        }
    </style>
   


}
<div class="container">
    <div class="teacher-card">
        <div class="teacher-card__header">
            @if (Model.PreviewPicture != null)
            {
                <img class="center-image" id="PreviewPicture" alt="profile"
                     src="data:image/*;base64,@(Convert.ToBase64String(Model.PreviewPicture))" />
            }
            else
            {
                <img class ="center-image" id="PreviewPicture" alt="profile"
                     src="~/images/CenterProfile.jpg" />
            }            Are you sure you want to delete this?
        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__label">Center Name:</div>
            <div class="teacher-card__value">@Model.Name</div>
        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__value">
                <i class="fas fa-map-marker-alt"></i>&nbsp;
                <span>@Model.Address.Street St. @Model.Address.City City, @Model.Address.Governorate</span>
            </div>
        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__label">Gender:</div>
            <div class="teacher-card__value">

                
                @if (@Model.IsGirlsOnly == true)
                {
                    <span>Girls</span>
                }
                <span>Mixed</span>

                </div>
        </div>
    </div>
</div>



       
      
 

    <form asp-action="Delete">
       
        <input type="hidden" asp-for="CenterID" />
        <input type="hidden" asp-for="CenterAdminid" />
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="Address" />

    <div class="form-navigation">
        <a asp-action="Index" class="btn btn-close">Cancel</a>
        <button type="submit" class="btn btn-primary">Delete</button>
    </div>
       
    </form>

    