@model XCourse.Core.DTOs.CenterAdmins.RoomDto

@section Styles
{

    <style>
        :root {
            --clr-primary: #5c2d91; /* البنفسجي المستخدم في العنوان */
            --clr-text-on-primary: #fff;
            --clr-text-on-secondary: #fff;
            --clr-secondary: #f5f1f9; /* خلفية ناعمة */
        }

        .details-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 30px;
            background-color: var(--clr-surface);
          
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow-md);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .title {
            text-align: center;
            color: var(--clr-primary);
            font-size: 2em;
            margin-bottom: 30px;
        }

        .image-wrapper {
            text-align: center;
            margin-bottom: 25px;
        }

        .room-image {
            width: 220px;
            height: 220px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid var(--clr-text-secondary);
            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
        }

        .details-list {
            display: grid;
            grid-template-columns: 150px auto;
            row-gap: 15px;
            column-gap: 20px;
            padding: 0 20px;
            margin-bottom: 1rem;
            font-weight: bold;
            color: var(--clr-text-secondary);
        }

        .details-list dt {
            font-weight: bold;
            color: var(--clr-primary);
                font-size: 1.2em;
        }

        .price {
            color: var(--clr-text-secondary);
            
            font-weight: bold;
            font-size: 1.2em;
        }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .btn {
            text-decoration: none;
            padding: 12px 25px;
            border-radius: 10px;
            font-weight: bold;
            font-size: 1em;
            transition: all 0.3s ease;
        }

        .btn.edit {
            background-color: var(--clr-primary);
            color: var(--clr-text-on-primary);
        }

        .btn.edit:hover {
            background-color: #7c4db6;
        }

        .btn.back {
            background-color: #d9534f;
            color: var(--clr-text-on-secondary);
        }

        .btn.back:hover {
            background-color: #c9302c;
        }
    </style>
}


<div class="details-container">
    <h2 class="title">@ViewData["Title"]</h2>

    <div class="image-wrapper">
        @if (Model.PreviewPicture2 != null)
        {
            <img class="room-image" alt="Room Image"
                 src="data:image/*;base64,@(Convert.ToBase64String(Model.PreviewPicture2))" />
        }
        else
        {
            <img class="room-image" alt="Default Room" src="~/images/default_center.svg" />
        }
    </div>

    <dl class="details-list">
        <dt>Name:</dt>
        <dd>@Model.Name</dd>

        <dt>Capacity:</dt>
        <dd>@Model.Capacity</dd>

        <dt>Equipment:</dt>
        <dd>@Model.Equipment</dd>

        <dt>Price Per Hour:</dt>
        <dd><span class="price">💰 @Model.PricePerHour</span></dd>

    </dl>

    <div class="buttons">
        @Html.ActionLink("Edit", "Edit", new { id = Model.RoomId }, new { @class = "btn edit" })
        <a asp-action="Index" asp-route-id="@Model.CenterId" class="btn back">Cancel</a>
    </div>
</div>
