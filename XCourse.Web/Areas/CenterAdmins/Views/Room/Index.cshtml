@model IEnumerable<XCourse.Core.ViewModels.CenterAdminViewModels.RoomsViewModel>

@{
    ViewData["Title"] = "GetRooms";
}

<h1>GetRooms</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.CenterID" class="btn btn-outline-success">Create New</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerHour)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerHour)
                </td>
              
                <td>


                    <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-outline-danger btn-sm">
                        Edit
                    </a>|
                    <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-outline-danger btn-sm">
                        Details
                    </a>|

                    <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-outline-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
