@model XCourse.Core.DTOs.CenterAdmins.RoomDto


@section Styles {
    <link rel="stylesheet" href="~/css/Assistants/Card.css" />
    <link rel="stylesheet" href="~/css/form.css" />
    <style>
        .center-image {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
        }
    </style>



}
<div class="container">
    <div class="teacher-card">
        <div class="teacher-card__header">
            @if (Model.PreviewPicture2 != null)
            {
                <img class="center-image" id="PreviewPicture" alt="profile"
                     src="data:image/*;base64,@(Convert.ToBase64String(Model.PreviewPicture2))" />
            }
            else
            {
                <img class="center-image" id="PreviewPicture" alt="profile"
                     src="~/images/CenterProfile.jpg" />
            }           
            Are you sure you want to delete this?
        </div>

        <div class="teacher-card__row">
            <div class="teacher-card__label">Room Name:</div>
            <div class="teacher-card__value">@Model.Name</div>
        </div>
        <div class="teacher-card__row">
            <div class="teacher-card__label">Capacity:</div>
            <div class="teacher-card__value">@Model.Capacity</div>
        </div>
        <div class="teacher-card__row">
            <div class="teacher-card__label">Equipment:</div>
            <div class="teacher-card__value">@Model.Equipment</div>
        </div>
        <div class="teacher-card__row">
            <div class="teacher-card__label">PricePerHour:</div>
            <span class="money-icon">💰</span> @Model.PricePerHour EGP
        </div>
       

        </div>
        </div>
        </div>

       
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <input type="hidden" asp-for="CenterId" />
        <input type="hidden" asp-for="Capacity" />
        <input type="hidden" asp-for="Equipment" />


    <div class="form-navigation">
        <a asp-action="Index" asp-controller="Center" asp-route-id="@Model.CenterId" class="btn btn-close">Cancel</a>
        <button type="submit" class="btn btn-close">Delete</button>
    </div>
    </form>

